<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".features.recipes.presentation.RecipesActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recipe_title"
        android:text="@string/recipes_title"
        android:layout_weight="10"
        />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recipes_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="70"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/create_product_button"
        android:src="@drawable/ic_create_recipe_button"
        android:layout_gravity="end"
        android:background="@null"
        />

</LinearLayout>