<?xml version="1.0" encoding="utf-8"?>




<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="horizontal"

    android:layout_margin="8dp"

    card_view:cardPreventCornerOverlap="false"

    card_view:cardElevation="20dp"
    card_view:contentPadding="1dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardUseCompatPadding="true"

    card_view:cardBackgroundColor="#000"
    >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="12dp"
        card_view:contentPadding="1dp"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/card_layout"
            >





            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:id="@+id/recipe_status"
                android:text="@string/status" />


            <TextView
                android:id="@+id/recipe_item_name"
                style="@style/Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recipe_status"
                android:text="@string/title"
                android:maxLines="1"
                android:ellipsize="end"
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/short_recipe_description"
                android:layout_below="@id/recipe_item_name"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/short_description" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>



</android.support.v7.widget.CardView>