<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".features.recipes.presentation.CreateRecipeActivity"

    >
    <TextView
        android:id="@+id/name_static"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"

        />
    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:maxLines="1"
        android:text="" />
    <TextView
        android:id="@+id/description_static"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="description"
        android:maxLines="7"
        />

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />
    <TextView
        android:id="@+id/ingredient_static"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:text="Ингредиенты                 Количество" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_weight="10"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onAddIngredient"
        android:text="Добавить ингредиент"
        android:background="@color/colorPrimary"
        android:layout_gravity="right"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Создать"
        android:onClick="onClick"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        />

</LinearLayout>