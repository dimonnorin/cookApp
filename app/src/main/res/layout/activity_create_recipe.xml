<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".features.recipes.presentation.CreateRecipeActivity"

    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:title="@string/create_activity_toolbar"
        style="@style/toolBar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />


    <ScrollView
        android:id="@+id/myview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/name_static"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title"
                style="@style/Title"
                />
            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1"
                android:text=""
                style="@style/EditText"
                />


            <TextView
                android:id="@+id/description_static"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:maxLines="7"
                style="@style/Description"
                />


            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/EditText"
                android:maxLines="7"
                android:text="" />



            <TextView
                android:id="@+id/ingredient_static"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Description"
                android:gravity="center_horizontal"
                android:text="@string/ingredients" />



            <android.support.v7.widget.RecyclerView
                android:id="@+id/ingredients"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="end"
                android:layout_weight="10"
                />






        </LinearLayout>


    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onAddIngredient"
        android:padding="8dp"
        android:layout_margin="20dp"
        android:text="@string/add_ingredient_text"
        android:layout_gravity="end"
        style="@style/TextButton"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_recipe_text"
        android:onClick="onClick"
        android:padding="8dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        style="@style/TextButton"
        />



</LinearLayout>